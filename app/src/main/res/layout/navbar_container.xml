<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

 <ImageView
     android:id="@+id/profile_dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/profile_dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_margin="10dp"
     app:flow_verticalBias="0.5"
     />

 <ImageView
     android:id="@+id/RE_logo"
     android:layout_width="200dp"
     android:layout_height="23dp"
     android:src="@drawable/re_logo"
     app:layout_constraintStart_toEndOf="@+id/profile_dp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_marginStart="5dp"
     app:flow_verticalBias="0.5"
     />

 <ImageView
     android:id="@+id/search_logo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:src="@drawable/search_icon"
     android:layout_marginStart="40dp"
     app:layout_constraintStart_toEndOf="@+id/RE_logo"
     app:layout_constraintTop_toTopOf="parent"

     app:flow_verticalBias="0.5"
     />

 <ImageView
     android:id="@+id/notification_logo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/notification_icon"
     app:layout_constraintStart_toEndOf="@+id/search_logo"
     app:layout_constraintTop_toTopOf="parent"
     app:flow_verticalBias="0.5"
     android:layout_marginTop="10dp"
     android:layout_marginStart="10dp"
   />

</androidx.constraintlayout.widget.ConstraintLayout>